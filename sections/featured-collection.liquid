{% assign featured = section.settings.featured_collection %}

<div data-section-id="{{ section.id }}" data-section-type="featured-products-section">
  {% unless section.settings.title == blank %}
    <h2>{{ section.settings.title | escape }}</h2>
  {% endunless %}
  <ul class="grid clearfix">
    {% for product in collections[featured].products limit: 3 %}
      {% include 'product-grid-item' with 'three-per-row' %}
    {% else %}
    <li>
      <p>
        You have no products in your {{ collections[settings.homepage_collection].title }} collection. 
        <a href="http://www.shopify.com/admin/collections">Add some.</a>
      <p>
    </li>
    {% endfor %}
  </ul>
</div>

{% schema %}
  {
    "name": "Featured collection",
    "class": "index-section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Featured collection"
      },
      {
        "type": "collection",
        "id": "featured_collection",
        "label": "Collection"
      }
    ],
    "presets": [
      {
        "name": "Featured collection",
        "category": "Collection",
        "settings":
        {
          "title": "Featured collection",
          "featured_collection": "frontpage"
        }
      }
    ]
  }
{% endschema %}