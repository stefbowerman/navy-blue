<div data-section-id="{{ section.id }}" data-section-type="ajax-cart">
  <div class="ajax-cart" data-ajax-cart>
    <a href="#" class="ajax-cart__close" data-close>close</a>

    <div class="container">
      <div class="row">
        <div class="col-sm-16 offset-sm-4 col-lg-10 offset-lg-7 col-xxl-6 offset-xxl-9">
          <form action="/cart" method="post" novalidate>
            <div class="ajax-cart__head">Cart</div>
            <div class="ajax-cart__body" data-body>
              {% comment %} Filled in via JS {% endcomment %}
            </div>              
            <div class="ajax-cart__footer">
              <div class="ajax-cart__footer-row">
                Subtotal: <span class="ajax-cart-price" data-total-price></span>
              </div>
              <div class="ajax-cart__footer-row">
                <button type="submit" name="checkout" class="btn btn--block">
                  Checkout
                </button>
              </div>
              {% if section.settings.cart_message != blank %}
                <div class="ajax-cart__footer-row">
                  <div style="width: 100%; text-align: center; font-style: italic;">
                    {{ section.settings.cart_message }}
                  </div>
                </div>
              {% endif %}
              <div class="ajax-cart__footer-row">
                <div style="width: 100%; text-align: center">
                  <a href="#" data-close>Back to Site</a>
                </div>
              </div>
            </div>
          </form>

          <div class="ajax-cart__empty">
            {% if section.settings.empty_text != blank %}
              {{ section.settings.empty_text }}
            {% else %}
              <p>YOUR CART IS EMPTY</p>
            {% endif %}
            <a href="/" class="btn btn--alt" data-close>Return to Shop</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Ajax Cart",
    "settings": [
      {
        "id": "cart_message",
        "type": "textarea",
        "label": "Cart Message",
        "info": "Optional message to display at the bottom of the cart"
      },
      {
        "id": "empty_text",
        "type": "richtext",
        "label": "Empty Text",
        "default": "<p>Cart Empty</p>"
      }
    ]
  }
{% endschema %}
